private void square(java.awt.event.ActionEvent evt) {
    number1 = Double.parseDouble(screen.getText());

    number1 = number1*number1;
    screen.setText(String.valueof(number1));
}

private void squareroot(java.awt.event.ActionEvent evt) {
    number1 = Double.parseDouble(screen.getText());
    double sqrt = Math.sqrt(number1);

    screen.setText(String.valueof(sqrt));
}